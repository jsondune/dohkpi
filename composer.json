{
    "name": "jsondune/phonebook-yii2",
    "description": "Implementation of test task telephone directory using Yii 2",
    "keywords": ["yii2", "framework", "basic", "project template","phonebook"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.4",
        "fxp/composer-asset-plugin": "1.1.*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "yiisoft/yii2-jui": "^2.0",        
        "mdmsoft/yii2-admin": "~2.0",
        "fzaninotto/faker":"*",
        "codeception/codeception":"2.0.*",
        "codeception/specify": "*",
        "codeception/verify":"*",
        "wbraganca/yii2-dynamicform": "*",
        "kartik-v/yii2-grid": "@dev",
        "kartik-v/yii2-krajee-base": "@dev",
        "kartik-v/yii2-mpdf": "@dev",
        "kartik-v/yii2-krajee-base": "@dev",
        "kartik-v/yii2-widgets": "*",
        "kartik-v/yii2-social": "*",
        "kartik-v/yii2-widget-colorinput": "*",
        "kartik-v/yii2-nav-x": "*",
        "kartik-v/yii2-widget-depdrop": "@dev",
        "kartik-v/yii2-grid": "@dev",
        "kartik-v/yii2-tabs-x": "*"                
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
